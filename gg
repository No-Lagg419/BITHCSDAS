while true do
    -- Lighter math loop
    for i = 1, 1e5 do  -- Small loop for CPU stress
        local a = math.sqrt(i) * math.random()
    end

    -- Spawn a few small parts
    for i = 1, 5 do
        local part = Instance.new("Part")
        part.Anchored = true
        part.Size = Vector3.new(0.5, 0.5, 0.5)
        part.Position = Vector3.new(
            math.random(-50, 50),
            math.random(5, 20),
            math.random(-50, 50)
        )
        part.Parent = workspace

        -- Auto-remove part after 2 seconds to avoid buildup
        game:GetService("Debris"):AddItem(part, 2)
    end

    -- Wait a bit longer for softer
